                                <th class="table__header-column"  data-translatable>Name // الاسم </th>
                                <th class="table__header-column"  data-translatable>Status // الحالة </th>
                                <th class="table__header-column"  data-translatable>Department // القسم </th>
                                <th class="table__header-column"  data-translatable>Product // المنتج </th>
                                <th class="table__header-column"  data-translatable>Author // المؤلف </th>
                                <th class="table__header-column"  data-translatable>Date // التاريخ </th>
                            </tr>
