<div class="my_account row">
    <div class="myAccount__content col-md-12">
        <div class="widget col-md-12" title="">
            <div class="admin-panel-view-staff">
                <div class="header">
                    <h2 class="header__title">My Account</h2>
                    <div class="header__description">Here you can edit information about you.</div>
                </div>
                <div class="staff-editor">
                    <div class="row">
                        <form method="post" action="/productSupport/editProfile" enctype="multipart/form-data">
                        <div class="col-md-4">
                            <div class="staff-editor__card">
                                <div class="staff-editor__card-data">
                                    <div class="staff-editor__card-name">Chancellor Palpatine</div>

                                    <button  type="submit" class="btn btn-success">edit </button>
                                    <div class="staff-editor__card-info">
                                        <div class="staff-editor__card-badge"><span
                                                class="staff-editor__card-badge-blue">3</span><span
                                                class="staff-editor__card-badge-text">Staff Level</span></div>
                                        <div class="staff-editor__card-badge"><span
                                                class="staff-editor__card-badge-green">0</span><span
                                                class="staff-editor__card-badge-text">Assigned</span></div>
                                        <div class="staff-editor__card-badge"><span
                                                class="staff-editor__card-badge-red">0</span><span
                                                class="staff-editor__card-badge-text">Closed</span></div>
                                    </div>
                                </div><label class="staff-editor__card-pic-wrapper">
                                    <div class="staff-editor__card-pic-background"></div><img
                                        class="staff-editor__card-pic"
                                        src="/images/profileImages/{{user.img}}"><span
                                        class="fa fa-upload fa-4x staff-editor__card-pic-icon"
                                        aria-hidden="true"></span>

                                    <input type="file" id="imgInp"
                                           class="staff-editor__image-uploader" accept="image/x-png,image/gif,image/jpeg" name="img" >



                                </label>

                            </div>

                        </div>
                        </form>
                        <div class="col-md-8">
                            <div class="staff-editor__form">
                                <form class="form staff-editor__update-email" method="post" action="/productSupport/editProfile"><label class="form-field"><span
                                            class="form-field__label">
                                            <!-- react-text: 2748 -->Email
                                            <!-- /react-text --></span><span class="input input_large"><input
                                                type="text" name="email" value="{{user.email}}"
                                                aria-required="true" class="input__text"></span></label><button
                                        class="button button_primary button_medium submit-button staff-editor__submit-button">Update
                                        email</button></form><span class="separator staff-editor__separator"></span>
                                <form class="form staff-editor__update-password" method="post" action="/productSupport/editProfile"><label class="form-field"><span
                                            class="form-field__label">
                                            <!-- react-text: 2756 -->oldPassword
                                            <!-- /react-text --></span><span class="input input_large"><input
                                                type="password" name="oldPassword" aria-required="true" class="input__text"
                                                value=""></span></label><label class="form-field"><span
                                            class="form-field__label">
                                            <!-- react-text: 2756 -->Password
                                            <!-- /react-text --></span><span class="input input_large"><input
                                                type="password" name="password" aria-required="true" class="input__text"
                                                value=""></span></label><label class="form-field"><span
                                            class="form-field__label">
                                            <!-- react-text: 2761 -->Repeat password
                                            <!-- /react-text --></span><span class="input input_large"><input
                                                type="password" name="repeatNewPassword" aria-required="true"
                                                class="input__text" value=""></span></label><button
                                        class="button button_primary button_medium submit-button staff-editor__submit-button">Update
                                        password</button></form>
                                <div><span class="separator staff-editor__separator"></span>
                                    <form class="form staff-editor__update-email-setting">
                                        <div class="form-group">
                                            <input type="checkbox" id="SendMail">
                                            <label for="SendMail">Send email on new ticket</label>
                                        </div>
                                        <button class="button button_primary button_medium submit-button staff-editor__submit-button">Update</button>
                                    </form>
                                </div><span class="separator staff-editor__separator"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="staff-editor__departments">
                                <div class="staff-editor__departments-title">Departments</div>
                                <form class="form">
                                    <div class="form-field">
                                        <span class="form-field__label"></span>
                                        <ul class="checkbox-group">
                                            {{#each user.departments}}
                                                <li class="checkbox-group__item">
                                                    <div class="form-group">
                                                        <input type="checkbox" id="Dep1{{this}}" checked>
                                                        <label for="Dep1{{this}}">{{this}}</label>
                                                    </div>
                                                </li>
                                            {{/each}}


                                        </ul>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="staff-editor__activity">
                                <div class="staff-editor__activity-title">Activity</div>
                                <div class="stats stats_staff">
                                    <div class="graph">
                                        <ul class="chart">
                                            <li>
                                                <span style="height:5%" title="Assigned"></span>
                                                <span class="ratio" title="5%"></span>
                                            </li>
                                            <li>
                                                <span style="height:70%" title="Tickets closed"></span>
                                                <span class="ratio" title="70%"></span>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div><span class="separator"></span>
                        <div class="staff-editor__tickets">
                            <div class="staff-editor__tickets-title">Tickets</div>
                            <div class="ticket-list">
                                <div class="ticket-list__filters">
                                    <div class="ticket-list__department-selector">
                                        <div class="drop-down drop-down_closed drop-down_medium">
                                            <div aria-expanded="false" aria-autocomplete="list"
                                                aria-owns="drop-down-menu_16"
                                                aria-activedescendant="drop-down-menu_16__1"
                                                class="drop-down__current-item" role="combobox" tabindex="0">
                                                <div>
                                                    Jedi Council
                                                </div>
                                            </div>
                                            <div class="drop-down__list-container"
                                                style="opacity: 0; transform: translateY(20px);">
                                                <div class="menu undefined">
                                                    <ul id="drop-down-menu_16" role="listbox" class="menu__list">
                                                        <li id="drop-down-menu_16__0" class="menu__list-item"
                                                            role="option">
                                                            <!-- react-text: 2852 -->All Departments
                                                            <!-- /react-text -->
                                                        </li>
                                                        <li id="drop-down-menu_16__1"
                                                            class="menu__list-item menu__list-item_selected"
                                                            role="option">
                                                            <!-- react-text: 2854 -->Jedi Council
                                                            <!-- /react-text -->
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="table__wrapper">
                                    <table class="table table-responsive">
                                        <thead>
                                            <tr class="table__header">
                                                <th class="table__header-column ticket-list__number col-md-1">
                                                    <!-- react-text: 2860 -->Number
                                                    <!-- /react-text -->
                                                </th>
                                                <th class="table__header-column ticket-list__title col-md-4">
                                                    <!-- react-text: 2862 -->Title
                                                    <!-- /react-text -->
                                                </th>
                                                <th class="table__header-column ticket-list__priority col-md-1">
                                                    <!-- react-text: 2864 -->Priority
                                                    <!-- /react-text -->
                                                </th>
                                                <th class="table__header-column ticket-list__department col-md-2">
                                                    <!-- react-text: 2866 -->Department
                                                    <!-- /react-text -->
                                                </th>
                                                <th class="table__header-column ticket-list__author col-md-2">
                                                    <!-- react-text: 2868 -->Author
                                                    <!-- /react-text -->
                                                </th>
                                                <th class="table__header-column ticket-list__date col-md-2">
                                                    <!-- react-text: 2870 -->Date
                                                    <!-- /react-text -->
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function(e) {
                $('.staff-editor__card-pic').attr('src', e.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#imgInp").change(function() {
        readURL(this);
    });</script>