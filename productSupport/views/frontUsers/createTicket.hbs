<div class="main-layout--content row">
    <div class="dashboard">
        <div class="dashboard__content col-md-12">
            <div class="widget col-md-12" title="">
                <div class="tab-content">
                    <!-- dashboard-create-ticket-page -->
                    <div class="tab-pane dashboard-create-ticket-page active" id="CreateTicket">
                        <div>
                            <div class="create-ticket-form">
                                <div class="header">
                                    <h2 class="header__title" data-translatable>Create Ticket // إنشاء</h2>
                                    <div class="header__description" data-translatable>This is a form for creating
                                        tickets. Fill the form and send us your
                                        issues/doubts/suggestions. Our support system will answer it
                                        as
                                        soon as possible.
                                    </div>
                                </div>
                                <form class="form" action="/productSupport/Ticket/create" method="post">
                                    <label class="form-field">
                                        <span class="form-field__label" data-translatable>
                                            Name // الإسم
                                        </span>
                                        <span class="input input_large">
                                            <input type="text" name="name" value="" aria-required="true"
                                                   class="input__text">
                                        </span>
                                    </label>
                                    <label class="form-field">
                                        <span class="form-field__label" data-translatable>
                                            Email // البريد الإلكتروني
                                        </span>
                                        <span class="input input_large">
                                            <input type="email" name="email" value="" aria-required="true"
                                                   class="input__text">
                                        </span>
                                    </label>
                                    <label class="form-field">
                                        <span class="form-field__label" data-translatable>
                                            Title of the Problem // عنوان المشكلة
                                        </span>
                                        <span class="input input_large">
                                            <input type="text" name="title" value="" aria-required="true"
                                                   class="input__text">
                                        </span>
                                    </label>
                                    <div class="row">
                                        <label class="form-field form-field_select col-md-5">
                                            <input type="checkbox" id="buttonDeprtDropDown">
                                            <span class="form-field__label" for="button" data-translatable>
                                                Department // القسم
                                            </span>
                                            <div class="drop-down drop-down_closed drop-down_medium __DeprtDropDown">


                                                <select name="department" id="department">
                                                    {{#each departments}}
                                                        <option value="{{this}}">{{this}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </label>
                                        <label class="form-field form-field_select col-md-5">
                                            <input type="checkbox" id="buttonProdDropDown">
                                            <span class="form-field__label" data-translatable>
                                                Product // المنتج
                                            </span>
                                            <div
                                                    class="drop-down drop-down_closed drop-down_medium language-selector __ProdDropDown">
                                                <select name="product" id="parentCat">
                                                    {{#each products}}
                                                        <option value="{{id}}" data-translatable>{{enName}} // {{arName}}</option>
                                                    {{/each}}
                                                </select>
                                                <div class="drop-down__list-container">

                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="form-field">
                                        <span class="form-field__label" data-translatable>
                                            Problem Description // وصف المشكلة
                                        </span>
                                        <div class="text-editor">
                                            <div class="quill text-editor__editor">
                                                <input name="content" type="hidden">
                                                <div id="editor"></div>
                                                <input name="image" type="file" id="upload" class="hidden" onchange="">

                                            </div>
                                        </div>

                                    </div>
                                    <div class="capatcha">
                                        <span class="msg-error error"></span>
                                        {{{reCAPTCHA}}}
                                    </div>
                                    <button type="submit" class="button button_primary button_large submit-button">
                                        Create Ticket
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- #dashboard-create-ticket-page -->
                </div>
            </div>
        </div>
    </div>
</div>


