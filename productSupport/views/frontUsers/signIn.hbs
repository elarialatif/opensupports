<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />


<div class="main-layout--content row">
    <div class="main-signup-page">
        <div class="widget signup-widget col-md-6 col-md-offset-3" title="">
            <div class="header">
                <h2 class="header__title" data-translatable >Sign up // انشاء حساب جديد</h2>
                <div class="header__description" data-translatable>Here you can create an account for our support
                    center.
                    It is required to send tickets and see documentation.
                    //
                </div>
            </div>
            {{#if errors}}
              {{>errors}}
            {{/if}}
            <form class="form signup-widget__form" method="post" action="/productSupport/signIn">
                <div class="signup-widget__inputs"><label
                        class="form-field signup-widget__input"><span class="form-field__label" data-translatable>
                                                <!-- react-text: 455 -->Full name // الإسم بالكامل
                    <!-- /react-text --></span><span class="input input_medium"><input
                        type="text" name="name" aria-required="true" class="input__text"
                        value="{{form.name}}"></span></label><label
                        class="form-field signup-widget__input"><span class="form-field__label" data-translatable >
                                                <!-- react-text: 460 -->Email // البريد الإلكتروني
                    <!-- /react-text --></span><span class="input input_medium"><input
                        type="text" name="email" aria-required="true" class="input__text"
                        value="{{form.email}}"></span></label>
                    <label
                            class="form-field signup-widget__input"><span class="form-field__label" data-translatable >
                                                <!-- react-text: 460 -->Role // الصلاحية
                        <!-- /react-text --></span><span class="input input_medium"> <select id="role" name="role"  class="selectpicker"  data-live-search="true">
                        {{#each roles}}
                            <option class="input input_medium" value="{{this}}" data-translatable>{{this}} //  {{arRoles this}}</option>
                        {{/each}}
                    </select></span></label>

                    <label
                            class="form-field signup-widget__input"><span class="form-field__label" data-translatable>
                                                <!-- react-text: 460 -->Products //  المنتجات
                        <!-- /react-text --></span><span class="input input_medium"> <select id="role" name="products" class="selectpicker" multiple data-live-search="true">
                        {{#each products}}
                            <option class="input input_medium" value="{{id}}" data-translatable>{{enName}} //  {{arName}}</option>
                        {{/each}}
                    </select></span></label>

                    <label
                            class="form-field signup-widget__input"><span class="form-field__label" data-translatable>
                                                <!-- react-text: 460 -->Departments // الاقسام
                        <!-- /react-text --></span><span class="input input_medium"> <select id="role" name="departments" class="selectpicker" multiple data-live-search="true">
                        {{#each departments}}
                            <option class="input input_medium" value="{{this}}" data-translatable>{{this}} //  {{arDepartment this }}</option>
                        {{/each}}
                    </select></span>
                    </label><label
                            class="form-field signup-widget__input"><span class="form-field__label" data-translatable>
                                                <!-- react-text: 465 -->Password // الرقم السري
                        <!-- /react-text --></span><span class="input input_medium"><input
                            type="password" name="password" aria-required="true"
                            class="input__text" value=""></span></label><label
                            class="form-field signup-widget__input"><span class="form-field__label" data-translatable>
                                                <!-- react-text: 470 -->Repeat password // اعادة الرقم السري
                        <!-- /react-text --></span><span class="input input_medium"><input
                            type="password" name="repeated_password" aria-required="true"
                            class="input__text" value=""></span></label>

                    <div class="signup-widget__captcha">
                        <div tabindex="0">
                            <div style="width: 304px; height: 78px;">
                                <div>
                                    <iframe
                                            src="https://www.google.com/recaptcha/api2/anchor?ar=1&amp;k=6LenJmYUAAAAABxxo7IJ4MitAXIIiZhHubX_nMxn&amp;co=aHR0cHM6Ly93d3cub3BlbnN1cHBvcnRzLmNvbTo0NDM.&amp;hl=en&amp;type=image&amp;v=v1559543665173&amp;theme=light&amp;size=normal&amp;cb=9gwlikfp9no"
                                            width="304" height="78" role="presentation"
                                            name="a-wi3pg07dttkc" frameborder="0" scrolling="no"
                                            sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox"></iframe>
                                </div>
                                <textarea id="g-recaptcha-response-3" name="g-recaptcha-response"
                                          class="g-recaptcha-response"
                                          style="width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;"></textarea>
                            </div>
                        </div>
                    </div>
                    <button class="button button_primary button_large submit-button" data-translatable>Sign
                        up // انشاء
                    </button>
            </form>
        </div>
    </div>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

