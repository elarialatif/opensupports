<div class="main-layout-header">
    <div class="main-layout-header__login-links">
        Welcome,
        <span class="main-layout-header__user-name">
            {{user.name}}
        </span>
    </div>
    <div class="drop-down drop-down_closed language-selector main-layout-header__languages">
        <div class="drop-down__current-item">
            <div>
                <img class="drop-down__current-item-icon flag"
                    src="/images/img/us.png" aria-hidden="true">
                English
            </div>
        </div>
        <div class="drop-down__list-container">
            <div class="menu undefined">
                <ul id="drop-down-menu_1" role="listbox" class="menu__list">
                    <li id="drop-down-menu_1__0" class="menu__list-item menu__list-item_selected" role="option">
                        <img  class="menu__icon flag"
                            src="/images/img/eg.png"
                            aria-hidden="true">
                        Arabic
                    </li>
                    
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="main-layout--content row">
    <div class="dashboard">
        <div class="dashboard__menu col-md-3">
            <div class="menu menu_secondary undefined">
                <div class="menu__header">Dashboard</div>
                <ul class="menu__list nav nav-tabs">
                    <li class="menu__list-item active" tabindex="0">
                        <a href="#TicketList" data-toggle="tab">
                            <span class="fa fa-file-text-o fa-lg menu__icon" aria-hidden="true"></span>
                            Ticket List
                        </a>
                    </li>
                    <li class="menu__list-item" tabindex="0">
                        <a href="#CreateTicket" data-toggle="tab">
                            <span class="fa fa-plus fa-lg menu__icon" aria-hidden="true"></span>
                            Create Ticket
                        </a>
                    </li>
                    <li class="menu__list-item" tabindex="0">
                        <a href="#ViewArticles" data-toggle="tab">
                            <span class="fa fa-question fa-lg menu__icon" aria-hidden="true"></span>
                            Help
                        </a>
                    </li>
                    <li class="menu__list-item" tabindex="0">
                        <a href="#EditProfile" data-toggle="tab">
                            <span class="fa fa-pencil fa-lg menu__icon" aria-hidden="true"></span>
                            Edit Profile
                        </a>
                    </li>
                    <li class="menu__list-item" tabindex="0">
                        <a href="/productSupport/logout">
                            <span class="fa fa-lock fa-lg menu__icon" aria-hidden="true"></span>
                            Close session
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="dashboard__content col-md-9">
            <div class="widget col-md-12" title="">
                <div class="tab-content">
                    <!-- dashboard-ticket-list -->
                    <div class="tab-pane dashboard-ticket-list active" id="TicketList">
                        <div class="header">
                            <h2 class="header__title">Ticket List</h2>
                            <div class="header__description">Here you can find a list of all tickets
                                you
                                have sent to our support team.
                            </div>
                        </div>
                        <div class="ticket-list">
                            <div class="ticket-list__filters"></div>
                            <div class="table__wrapper">
                                <div class="dataTables_length" id="tickets_length"><label>Show
                                        <select class="select input__text" name="tickets_length" aria-controls="tickets"
                                            class="">
                                            <option value="10">10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                        </select> entries</label></div>
                                <div id="tickets_filter" class="dataTables_filter"><label>Search:
                                        <input type="search" class="input__text" placeholder=""
                                            aria-controls="tickets"></label></div>
                                <table class="table table-responsive" id="tickets">
                                    <thead>
                                        <tr class="table__header">
                                            <th class="table__header-column ticket-list__number col-md-1">
                                                Number
                                            </th>
                                            <th class="table__header-column ticket-list__title col-md-2">
                                                Title
                                            </th>
                                            <th class="table__header-column ticket-list__title col-md-3">
                                                Product
                                            </th>
                                            <th class="table__header-column ticket-list__department col-md-3">
                                                Department
                                            </th>
                                            <th class="table__header-column ticket-list__department col-md-1">
                                                Status
                                            </th>
                                            <th class="table__header-column ticket-list__date col-md-2">
                                                Date
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each tickets}}
                                        <tr class="table__row">
                                            <td class="table__cell ticket-list__number col-md-1">
                                                <a href="#">{{id}}</a>
                                            </td>
                                            <td class="table__cell ticket-list__title col-md-2">
                                                <div>
                                                    {{title}}
                                                </div>
                                            </td>
                                            <td class="table__cell ticket-list__department col-md-3">
                                                {{product.name}}
                                            </td>
                                            <td class="table__cell ticket-list__department col-md-3">
                                                {{department}}
                                            </td>
                                            <td class="table__cell ticket-list__number col-md-1">
                                                {{status}}
                                            </td>
                                            <td class="table__cell ticket-list__date col-md-2">31
                                                {{time date 'MMMM D YYYY'}}
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                                <div class="dataTables_info" id="tickets_info" role="status" aria-live="polite">Showing
                                    1 to
                                    2 of 2 entries
                                </div>
                                <div class="dataTables_paginate paging_simple_numbers" id="tickets_paginate"><a
                                        class="paginate_button previous disabled" aria-controls="tickets"
                                        data-dt-idx="0" tabindex="0" id="tickets_previous">Previous</a><span><a
                                            class="paginate_button current" aria-controls="tickets" data-dt-idx="1"
                                            tabindex="0">1</a></span><a class="paginate_button next disabled"
                                        aria-controls="tickets" data-dt-idx="2" tabindex="0" id="tickets_next">Next</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #dashboard-ticket-list -->
                    <!-- dashboard-create-ticket-page -->
                    <div class="tab-pane dashboard-create-ticket-page" id="CreateTicket">
                        <div>
                            <div class="create-ticket-form">
                                <div class="header">
                                    <h2 class="header__title">Create Ticket</h2>
                                    <div class="header__description">This is a form for creating
                                        tickets. Fill the form and send us your
                                        issues/doubts/suggestions. Our support system will answer it
                                        as
                                        soon as possible.
                                    </div>
                                </div>
                                <form class="form" action="/productSupport/Ticket/create" method="post">
                                    <label class="form-field">

                                        <span class="input input_large">
                                            <input type="hidden" name="name" value="{{user.name}}" aria-required="true"
                                                class="input__text">
                                        </span>
                                    </label>
                                    <label class="form-field">

                                        <span class="input input_large">
                                            <input type="hidden" name="email" value="{{user.email}}"
                                                aria-required="true" class="input__text">
                                        </span>
                                    </label>
                                    <label class="form-field">
                                        <span class="form-field__label">
                                            Title of the Problem
                                        </span>
                                        <span class="input input_large">
                                            <input type="text" name="title" value="" aria-required="true"
                                                class="input__text">
                                        </span>
                                    </label>
                                    <div class="row">
                                        <label class="form-field form-field_select col-md-5">
                                            <input type="checkbox" id="buttonDeprtDropDown">
                                            <span class="form-field__label" for="button">
                                                Department
                                            </span>
                                            <div class="drop-down drop-down_closed drop-down_medium __DeprtDropDown">


                                                <select name="department" id="department">
                                                    {{#each departments}}
                                                    <option class="dropOption" value="{{this}}">{{this}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </label>
                                        <label class="form-field form-field_select col-md-5">
                                            <input type="checkbox" id="buttonProdDropDown">
                                            <span class="form-field__label">
                                                Product
                                            </span>
                                            <div
                                                class="drop-down drop-down_closed drop-down_medium language-selector __ProdDropDown">
                                                <select name="product" id="parentCat">
                                                    {{#each products}}
                                                    <option class="dropOption" value="{{id}}">{{name}}</option>
                                                    {{/each}}
                                                </select>
                                                <div class="drop-down__list-container">

                                                </div>
                                            </div>
                                        </label>
                                    </div>
                                    <div class="form-field">
                                        <span class="form-field__label">
                                            Problem Description
                                        </span>
                                        <div class="text-editor">
                                            <div class="quill text-editor__editor">

                                                <textarea id="editor" name="content">
                                                                            Describe Here!!
                                                                        </textarea>

                                            </div>
                                        </div>

                                    </div>
                                    <div class="capatcha">
                                        <span class="msg-error error"></span>
                                        {{{reCAPTCHA}}}
                                    </div>
                                    <button type="submit" class="button button_primary button_large submit-button">
                                        Create Ticket
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- #dashboard-create-ticket-page -->
                    <!-- dashboard-Help-page -->
                    <div class="tab-pane dashboard-list-articles-page" id="ViewArticles">
                        <div>
                            <div class="header">
                                <h2 class="header__title">Help</h2>
                                <div class="header__description">This is a list of articles that
                                    includes information about our services.
                                </div>
                            </div>
                            <div class="content__help">
                                <div class="account_logo">
                                    <img src="/images/img/favIcon.png" alt="">
                                    <span>kalemon school </span>
                                </div>
                                <div class="account_logo">
                                    <img src="/images/img/favIcon.png" alt="">
                                    <span>kalemon school </span>
                                </div>
                                <div class="account_logo">
                                    <img src="/images/img/favIcon.png" alt="">
                                    <span>kalemon school </span>
                                </div>
                                <div class="account_logo">
                                    <img src="/images/img/favIcon.png" alt="">
                                    <span>kalemon school </span>
                                </div>
                                <div class="account_logo">
                                    <img src="/images/img/favIcon.png" alt="">
                                    <span>kalemon school </span>
                                </div>
                                <div class="account_logo">
                                    <img src="/images/img/favIcon.png" alt="">
                                    <span>kalemon school </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #dashboard-Help-page -->
                    <!-- edit-profile-page -->
                    <div class="tab-pane edit-profile-page" id="EditProfile">
                        <div class="header">
                            <h2 class="header__title">Edit Profile</h2>
                            <div class="header__description">Here you can edit your user by changing
                                your email or your password.
                            </div>
                        </div>
                        <div class="edit-profile-page__title">Additonal Fields</div>
                        <form class="form">
                            <div class="edit-profile-page__custom-fields">
                                <div class="edit-profile-page__custom-field">
                                    <label class="form-field form-field_select">
                                        <input type="checkbox" id="buttonDeprtDropDown">
                                        <span class="form-field__label">
                                            Department
                                            <div class="drop-down drop-down_closed drop-down_medium __DeprtDropDown">
                                                <select name="department" id="department">
                                                    <option class="dropOption" value="support">support</option>
                                                    <option class="dropOption" value="developments">developments
                                                    </option>
                                                </select>
                                            </div>
                                        </span>
                                    </label>
                                    <label class="form-field form-field_select">
                                        <input type="checkbox" id="buttonDeprtDropDown">
                                        <span class="form-field__label">
                                            Product
                                            <div class="drop-down drop-down_closed drop-down_medium __DeprtDropDown">
                                                <select name="department" id="department">
                                                    <option class="dropOption" value="support">Product1</option>
                                                    <option class="dropOption" value="developments">Product2</option>
                                                </select>
                                            </div>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            <div class="row">
                                <button class="button button_primary button_large submit-button">Save
                                </button>
                            </div>
                        </form>
                        <div class="edit-profile-page__title">Edit email</div>
                        <form class="form"><label class="form-field"><span class="form-field__label">
                                    <!-- react-text: 984 -->New email
                                    <!-- /react-text --></span><span class="input input_large"><input type="text"
                                        name="newEmail" aria-required="true" class="input__text"
                                        value=""></span></label>
                            <button class="button button_primary button_large submit-button">Change
                                email
                            </button>
                        </form>
                        <div class="edit-profile-page__title">Edit password</div>
                        <form class="form"><label class="form-field"><span class="form-field__label">
                                    <!-- react-text: 992 -->Old password
                                    <!-- /react-text --></span><span class="input input_large"><input type="password"
                                        name="oldPassword" aria-required="true" class="input__text"
                                        value=""></span></label><label class="form-field"><span
                                    class="form-field__label">
                                    <!-- react-text: 997 -->New password
                                    <!-- /react-text --></span><span class="input input_large"><input type="password"
                                        name="password" aria-required="true" class="input__text"
                                        value=""></span></label><label class="form-field"><span
                                    class="form-field__label">
                                    <!-- react-text: 1002 -->Repeat new password
                                    <!-- /react-text --></span><span class="input input_large"><input type="password"
                                        name="repeatNewPassword" aria-required="true" class="input__text"
                                        value=""></span></label>
                            <button class="button button_primary button_large submit-button">Change
                                password
                            </button>
                        </form>
                    </div>
                    <!-- #edit-profile-page -->
                </div>
            </div>
        </div>
    </div>
</div>


